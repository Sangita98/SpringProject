
import java.util.List;

public class Hibernate_CRUD_Operations {

	private static SessionFactory factory;

	public static void getSessionFactory() {
		try {
			Configuration conf = new Configuration().configure();
			StandardServiceRegistryBuilder builder = new StandardServiceRegistryBuilder()
					.applySettings(conf.getProperties());
			factory = conf.buildSessionFactory(builder.build());
		} catch (Throwable ex) {
			System.out.println("Exception is: " + ex);
		}
	}

	public static void main(String[] args) {
		getSessionFactory();
		Hibernate_CRUD_Operation obj = new Hibernate_CRUD_Operation();
		Student stud1 = new Student(101, "Sangita", "IT", 89);
		Student stud2 = new Student(102, "Rishika", "IT ", 75);
		Student stud3 = new Student(103, "Parth", "CS", 70);
		obj.insertIntoDatabase(stud1);
		obj.insertIntoDatabase(stud2);
		obj.insertIntoDatabase(stud2);
		// Displays the records from the database.
		obj.displayRecords();
		// Display the data using Native SQL:
		obj.displayRecords_NativeSQL();
		// Update the record
		obj.updateRecord(102, IT);
		// Delete record.
		obj.deleteRecord(103);
	}
	public void insertIntoDatabase(Student student) {
		try {
			Session session = factory.openSession();
			Transaction tx = session.beginTransaction();
			session.save(emp);
			tx.commit();
			System.out.println("Given record is inserted in the database successfully.");
		} catch (HibernateException ex) {
			System.out.println("Exception is: " + ex);
		}
	}
	// Displays the list of records from the database.
	public void displayRecords() {
		try {
			Session sessionObj = factory.openSession();
			List<Student> studentList = sessionObj.createQuery("FROM Student").list();
			System.out.println("List of records in the db are: ");
			for (Student student : studentList)
				System.out.println(student);
			sessionObj.close();
		} catch (Hibernate_CRUD_Operation ex) {
			System.out.println("Exception is: " + ex);
		}
	}
	// Display the records with Native SQL.
	public void displayRecords_NativeSQL() {
		try {
			Session sessionObj = factory.openSession();
			String str = "SELECT * FROM hibernate_create_insert_update_delete where salary =5000";
			SQLQuery query =sessionObj.createSQLQuery(str);
			List<Student> studentList = query.list();
			query.addEntity(Student.class);
			System.out.println("List of records: ");
			for (Student student : studentList)
				System.out.println(emp);
			sessionObj.close();
		} catch (HibernateException ex) {
			System.out.println("Exception is: " + ex);
		}
	}
	// Update the record in the database.
	public void updateRecord(int id, int salary) {
